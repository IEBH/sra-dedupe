{
  "name": "sra-dedupe",
  "version": "1.0.9",
  "description": "CREBP-SRA tool to deduplicate reference libraries",
  "main": "index.js",
  "scripts": {
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CREBP/sra-dedupe.git"
  },
  "keywords": [
    "crebp",
    "sra",
    "dedupe",
    "deduplicate",
    "medical",
    "research"
  ],
  "author": "Matt Carter <m@ttcarter.com> (https://github.com/hash-bang)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CREBP/sra-dedupe/issues"
  },
  "homepage": "https://github.com/CREBP/sra-dedupe#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0"
  },
  "dependencies": {
    "async-chainable": "^2.6.0",
    "async-chainable-cartesian": "1.0.2",
    "compare-names": "^1.1.0",
    "lodash": "^4.17.11",
    "natural": "^0.6.2",
    "reflib-utils": "^1.0.0"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "inputs": [
    {
      "type": "citations",
      "format": "json",
      "filename": "input.json"
    }
  ],
  "worker": {
    "type": "docker",
    "container": "crebp/dedupe",
    "mount": "/app/work",
    "command": [
      "/app/work/input.json",
      "/app/work/output.json"
    ],
    "environment": {
      "DEDUPE_ACTION": "${settings.action}",
      "DEDUPE_MARK_FIELD": "${settings.markField}"
    }
  },
  "outputs": [
    {
      "type": "citations",
      "format": "json",
      "filename": "output.json"
    }
  ],
  "settings": {
    "action": {
      "type": "choice",
      "default": "remove",
      "enum": [
        {"id": "remove", "title": "Remove all duplicates"},
	{"id": "mark", "title": "Mark duplicates in their 'caption' field"}
      ]
    },
    "markField": {
      "title": "Field to change when marking as duplicate",
      "showIf": "action == 'mark'",
      "type": "string",
      "advanced": true,
      "default": "caption"
    },
    "merge.dupes": {
      "type": "hidden",
      "default": "ignore"
    }
  }
}
